pipeline {
    agent any 
    environment{
        PATH="/opt/mvn-3.9.5/bin:$PATH"
    }
    stages{
        stage('clone'){
           steps{
            git 'https://github.com/Premchand-1/declarative-maven-git.git'
           }
        }
         stage('build'){
           steps{
            sh "mvn clean package"
           }
        }
         stage('deploy'){
           steps{
            sshagent(['tomcat']) {
             
             //stop tomcat
             sh "ssh -o strictHostKeyChecking=no root@172.31.2.85 /opt/tomcat9/bin/shutdown.sh"
             //copying jar file to remote tomcat
             sh "scp taget/target/declarative_plugin-1.0-SNAPSHOT.jar root@172.31.2.85:/opt/tomcat9/webapps/"
             //start tomcat
             sh "ssh root@172.31.2.85 /opt/tomcat9/bin/startup.sh"

                     } 
           }
        }
    }
}  
