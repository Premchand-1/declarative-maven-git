
pipeline{
     
     agent any
     
     stages{
         stage('SCM Checkout'){
             steps{
                 git 'https://github.com/Premchand-1/declarative-maven-git.git'
             }
         }
           stage('Maven Build'){
             steps{
                 sh 'mvn clean package'
                 
             }
         }
           stage('Deploy dev'){
             steps{
                
                
                
                sshagent(['Tomcat']) {

       	// stop tomcat 
					 sh "ssh -o StrictHostkeyChecking=no  ec2-user@52.15.166.23:/opt/tomcat10/bin/shutdown.sh"
                 			    
                 	//copy war file to remote tomcat
                
                 	//copinig files one server to onther server we use scp command
                 	
                 	sh "scp taget/declarative-maven-git.jar ec2-user@52.15.166.23:/opt/tomcat10/webapps"
					
					// start tomcat
					 sh "ssh ec2-user@52.15.166.23:/opt/tomcat10/bin/startup.sh"
}
                 
             }
         }
         
     }
} 